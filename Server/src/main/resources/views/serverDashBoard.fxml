<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/ChartStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eg.gov.iti.jets.ui.controllers.serverDashBoardController">
   <left>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <VBox prefHeight="380.0" prefWidth="337.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Pane fx:id="mychartpane" />
                  <HBox prefHeight="17.0" prefWidth="307.0" spacing="20.0">
                     <children>
                        <RadioButton mnemonicParsing="false" onAction="#showGender" text="Gender">
                           <toggleGroup>
                              <ToggleGroup fx:id="mygroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" onAction="#showOnOff" text="On/Offline" toggleGroup="$mygroup" />
                        <RadioButton mnemonicParsing="false" onAction="#showCountries" text="Country" toggleGroup="$mygroup" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </left>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>

   </left>
   <right>
      <Pane prefHeight="400.0" prefWidth="253.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="stopbutton" layoutX="98.0" layoutY="27.0" mnemonicParsing="false" onAction="#stopService" style="-fx-background-color: red;" text="Stop" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="startbutton" layoutX="31.0" layoutY="27.0" mnemonicParsing="false" onAction="#startService" style="-fx-background-color: green;" text="Start" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </Pane>
   </right>
</BorderPane>
